---
import ClaveSol from "./icons/ClaveSol.astro";
import Videos from "./Videos.astro";
import VercelSDK from "./icons/VercelSDK.astro";
---

<section>
    <div class="description">
        <img src="TrebleClef.png" class="sunChord"/><h1>
            ymphon.<strong class="ia-text">ia</strong>
        </h1>

        <p>
            Your ultimate tool for creating <strong
                >unique melodies and rhythms with artificial intelligence</strong
            >. Developed for the Vercel Hackathon 2024.
        </p>
        <a href="#formMusic">Get Started</a>
    </div>

    <div class="videos">
        <Videos />
    </div>
</section>

<style>
    section {
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: center;
        color: var(--celeste);
        width: 1000px;
        height: 95vh;
        animation: fadein 3s;
        margin-top: 20px;
    }

    .videos {
        padding-left: 1rem;
    }

    .description {
        display: grid;
        grid-template-areas:
            "note ."
            "note title"
            "note text"
            "button button";

        grid-template-columns: 0.35fr 2fr;
        grid-template-rows: 0.2fr 0.5fr 0.5fr 0.25fr;
        width: 400px;
        z-index: 1;
        gap: 10px;
    }

    .sunChord {
        grid-area: note;
        width: 150px;
        height: 300px;
        margin: 0;
        animation: jump 5s infinite;
    }

    .ia-text {
        color: #4c368d;
        padding: 0;
        margin: 0;
    }

    h1 {
        font-size: 6rem;
        grid-area: title;
        margin-bottom: 0;
    }

    p {
        font-size: 1rem;
        width: 100%;
        color: var(--khaki);
        margin-top: 0;
        grid-area: text;
    }

    a {
        background-color: #222222;
        color: var(--celeste);
        font-size: 1rem;
        padding: 0.5rem 1rem;
        border-radius: 5px;
        cursor: pointer;
        grid-area: button;
        grid-column: 1 / 2;
        border: none;
        text-decoration: none;
        text-align: center;
        transition: all 0.5s;
        margin-top: -20px;
    }

    a:hover {
        background-color: var(--celeste);
        color: var(--black);
        transform: scale(1.1);
    }

    @keyframes fadein {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }

    @keyframes jump {
        0% {
            transform: translateY(0);
        }
        50% {
            transform: translateY(-10px);
        }
        100% {
            transform: translateY(0);
        }
    }

    @media (max-width: 1020px) {
        section{
            width: 100%;
            
        }
    }

    @media (max-width: 880px) {
        .description{
            width: 100%;
        }
        .videos{
            display: none;
        }
    }

    @media (max-width: 680px) {

        h1 {
            font-size: 4rem;
        }

        p {
            font-size: 0.8rem;
        }

        a {
            font-size: 0.8rem;
        }

        .sunChord{
            width: 100px;
            height: 200px;
        }
        
        .description{
            gap: 20px;
        }
    }

    @media (max-width: 523px) {

        .description{
            width: 80%;
            grid-area: auto;
        }
        h1 {
            font-size: 2rem;
        }

        p {
            font-size: 0.6rem;
            width: 100%;
            text-wrap: wrap;
        }

        a {
            font-size: 0.6rem;
        }

        .sunChord{
            width: 80px;
            height: 160px;
        }
    }
</style>
