---
import Note from "./icons/Note.astro";
import Robot from "./icons/Robot.astro";
---

<div class="animated-background">
    <Robot class="robot" stroke="white" />
    <Robot class="robot" stroke="white" />
    <Note class="note" stroke="white" />
    <Robot class="robot" stroke="white" />
    <Note class="note" stroke="white" />
    <Robot class="robot" stroke="white" />
    <Note class="robot" stroke="white" />
    <Robot class="robot" stroke="white" />
</div>

<style>
    .note,
	.robot {
		position: absolute;
		top: -200px;
		width: 40px;
		height: 40px;
		animation: fall infinite linear 5s;
		z-index: -2;
	}

	.animated-background svg:nth-child(1) {
		left: 25%;
		width: 40px;
		height: 40px;
		animation-delay: 0s;
		animation-duration: 22s;
	}
	.animated-background svg:nth-child(2) {
		left: 10%;
		width: 20px;
		height: 20px;
		animation-delay: 2s;
		animation-duration: 33s;
	}
	.animated-background svg:nth-child(3) {
		left: 70%;
		width: 20px;
		height: 20px;
		animation-delay: 4s;
	}
	.animated-background svg:nth-child(4) {
		left: 40%;
		width: 60px;
		height: 60px;
		animation-delay: 3s;
		animation-duration: 23s;
	}
	.animated-background svg:nth-child(5) {
		left: 65%;
		width: 20px;
		height: 20px;
		animation-delay: 5s;
	}
	.animated-background svg:nth-child(6) {
		left: 75%;
		width: 110px;
		height: 110px;
		animation-delay: 6s;
	}
	.animated-background svg:nth-child(7) {
		left: 90%;
		width: 120px;
		height: 120px;
		animation-delay: 7s;
		animation-duration: 20s;
	}
	.animated-background svg:nth-child(8) {
		left: 55%;
		width: 60px;
		height: 60px;
		animation-delay: 2s;
		animation-duration: 25s;
	}


	@keyframes fall {
		from {
			transform: translateY(-100vh);
			opacity: 0.1;
		}
		to {
			transform: translateY(100vh);
			opacity: 0;
		}
	}

	@media (max-width: 523px) {
		.animated-background svg {
			display: none;
		}
	}
</style>